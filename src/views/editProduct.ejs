<body>
    <div data-role="page" id="update">
        <div data-role="header">
            <h1>Clothes Ali</h1>
        </div>
        <div data-role="content">
            <form action="/products/<%= result.barcode%>" method="POST">
                <input type="text" name="src" id="txt_name" placeholder="Nombre del producto" value="<%= result.src %>">
                
                <input type="text" name="barcode" id="txt_barcode" placeholder="Codigo de barras" value="<%= result.barcode %>">
            
                <input type="text" name="title" id="txt_brand" placeholder="Marca" value="<%= result.title %>">
            
                <input type="text" name="description" id="txt_price" placeholder="Precio de venta" value="<%= result.description %>">
                
                <input type="text" name="size" id="txt_cost" placeholder="Precio de compra" value="<%= result.size %>">
                

                <button type="submit" class="ui-shadow ui-btn ui-corner-all ui-mini">Actualizar</button>
            </form>
        </div>
